<div class="container-fluid well " >
  <div class="row row-centered">
    <h2>Sign up</h2></br>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if devise_error_messages!.present? %>
            <div class="alert alert-danger">
              <%= devise_error_messages! %>
            </div>
        <% end %>
        <div class="field">
          <%= f.email_field :email,placeholder:"Email" ,autofocus: true %>
        </div><br/>

        <div class="field">
          <% if @minimum_password_length %>

          <% end %>
          <%= f.password_field :password,placeholder:"Password", autocomplete: "off" %>
        </div></br>

        <div class="field">
          <%= f.password_field :password_confirmation,placeholder:"Password confirmation", autocomplete: "off" %>
        </div><br>

        <div class="field">
          <%= f.text_field :mobile_number,placeholder:"Mobile number" ,autofocus: true %>
        </div><br/>

        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-primary" %>
        </div>
    <% end %><br>

<%#= render "devise/shared/links" %>
  </div>
</div>