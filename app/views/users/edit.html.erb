<h2>Edit <%= @user.name.to_s.humanize %></h2>
<div class="alert alert-danger">
<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
<% end %>
</div>
<div class="container-fluid">
  <%= form_for(@user, url: user_path(@user), html: { method: :put },multipart: true) do |f| %>

      <div class="field">
        <%= f.label :profile_image %><br/>
        <div>
          <% if @user.avatar.present? %>
              <%= image_tag @user.avatar,:style=> "height: 42px;width: 42px;border-radius:50%;" %>
          <% else %>
              <%= image_tag "profile.png",:style=> "height: 42px;width: 42px;border-radius:50%;" %>
          <% end %>
        </div><br/>
        <%= f.file_field :avatar,value:@user.avatar %>
      </div><br>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true%>
      </div><br>

      <div class="field">
        <%= f.label :mobile_number %><br/>
        <%= f.text_field :mobile_number, autofocus: true%>
      </div><br>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div><br>

      <div class="field">
        <%= f.label :dob %><br/>
        <%= f.text_field :dob, class: "datepicker"%>
      </div><br>



      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div><br>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div><br>


      <div class="actions">
        <%= f.submit "Update" %>
      </div><br/>
  <% end %>

        <%= link_to 'Back', users_path %>
</div>