<div class="container-fluid">
  <h2>Users</h2>

  <table class="table table-bordered table-responsive">

    <thead>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Is Admin</th>
        <th>Edit</th>
        <th>Delete</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id%></td>
          <td><%= user.name%></td>
          <td><%= user.email%></td>
          <td><%= user.mobile_number%></td>
          <td><%= user.admin%>
          <td><%= link_to 'Edit', edit_user_path(user.id)%></td>
          <td><%= link_to 'Delete', edit_user_path(user.id)%></td>
        </tr>
      <%end %>
    </tbody>
  </table>
</div>