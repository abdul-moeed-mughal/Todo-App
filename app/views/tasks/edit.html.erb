<div class="container-fluid">
  <h2> #<%= @task.id %></h2>
    <% if @task.errors.any? %>
        <div class="alert alert-danger">
          <% @task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </div>
    <% end %>

  <div class="well">
    <%= form_for(@task, url:"/tasks/#{@task.id}", html: {method: :put},multipart: true) do |f| %>
        <%= render :partial =>'form',:locals => {:task => @task,:f => f} %>

        <div class="actions">
          <%= f.submit "Update" ,class: "btn btn-primary"%>
        </div><br/>

        <%= link_to "Back",tasks_path %>
    <% end %>
  </div>
</div>

<script>
    $(document).ready(function() {

        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy'
        });
    });

</script>