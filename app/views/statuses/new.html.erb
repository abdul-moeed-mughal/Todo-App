<div class="container-fluid">
  <h2>New Status</h2>
  <% if @status.errors.any? %>
      <div class="alert alert-danger">
        <% @status.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </div>
  <% end %>

  <div class="well">
      <%= form_for(@status, url: create_status_path, html: { method: :post },multipart: true) do |f| %>

          <%= render :partial =>'form',:locals => {:user => @status,:f => f} %>

          <div class="actions">
            <%= f.submit "Create" ,class: "btn btn-primary"%>
          </div><br/>
      <% end %>

      <%= link_to 'Back', statuses_path %>
  </div>
</div>