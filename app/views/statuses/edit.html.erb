<div class="container-fluid">
  <h2>Edit <%= @status.name.to_s.humanize %></h2>
  <% if @status.errors.any? %>
      <div class="alert alert-danger">
        <% @status.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </div>
  <% end %>

  <%= form_for(@status, url: status_path(@status), html: { method: :put },multipart: true) do |f| %>

      <%= render :partial =>'form',:locals => {:user => @status,:f => f} %>

      <div class="actions">
        <%= f.submit "Update",class: 'btn btn-primary' %>
      </div><br/>
  <% end %>

  <%= link_to 'Back', statuses_path %>
</div>

<script>
    $(document).ready(function() {

        $('#user_dob').datepicker({
            format: 'dd/mm/yyyy'
        });
    });

</script>