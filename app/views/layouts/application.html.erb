<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

<div class="container-fluid" >
  <div style="float: right;">
    <% if user_signed_in? %>
        <div>
          <%= link_to edit_user_registration_path do %>
              <% if current_user.avatar.present? %>
                <%= image_tag current_user.avatar,:title => "Edit Profile",:style=>"height: 42px;width: 42px;border-radius:50%;" %>
              <% else %>
                <%= image_tag "profile.png",:title => "Edit Profile",:style=> "height: 42px;width: 42px;border-radius:50%;" %>
              <% end %>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete do  %>
            <%= image_tag "logout.png",:title => "Logout",:style=> "height: 42px;width: 42px;border-radius:50%" %>
          <% end %>
        </div>
    <% end %>
  </div>

  <div>
    <img alt="Todo image"  src="./../assets/download.png" style="width:10%">
  </div></br>
</div></br>

    <ul id="menu">
      <% begin %>
          <% if current_user.admin %>
              <li id="menu_li"><%= link_to "Administration",admin_path %></li>
              <%#= render partial: "admin/admin_menu" %>
          <% end %>
      <% rescue %>
      <% end %>
      <% if user_signed_in? %>
          <li id="menu_li"><%= link_to "Tasks", root_path %></li>
          <li id="menu_li"><%= link_to "New Task" %></li>
      <% else %>
         <li id="menu_li"><%= link_to "Sign up", new_user_registration_path %></li>
         <li id="menu_li"><%= link_to "Login", new_user_session_path %></li>
      <% end %>
      <li id="menu_li"><%= link_to 'Home',root_path %></li>
    </ul><br>

    <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
    <% end %>

<%= yield %>
</body>


</html>

<style>
    #menu {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }

    #menu_li {
        float: right;
    }

    li a {
        display: inline-block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

    li a:hover {
        background-color: #111;
    }
    .alert-success {
        background-color: #dff0d8;
        border-color: #d6e9c6;
        color: #3c763d;
    }
    .alert-danger {
        background-color: #f2dede;
        border-color: #ebccd1;
        color: #a94442;
    }
    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }
    p {
        margin: 0 0 10px;
    }
    .pull-right{
        float: right !important;
    }

    .navbar-text {
        float: left;
        margin-left: 15px;
        margin-right: 15px;
    }

    .navbar-text {
        margin-top: 15px;
        margin-bottom: 15px;
    }

</style>